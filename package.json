{
  "name": "servex-thread",
  "version": "1.0.2",
  "description": "Framework-agnostic Service Worker thread abstraction system. Organize your SW code into modular threads with a clean, type-safe API.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "servex-thread": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./vite": {
      "types": "./dist/plugins/vite.d.ts",
      "require": "./dist/plugins/vite.js",
      "import": "./dist/plugins/vite.mjs"
    },
    "./webpack": {
      "types": "./dist/plugins/webpack.d.ts",
      "require": "./dist/plugins/webpack.js",
      "import": "./dist/plugins/webpack.mjs"
    },
    "./rollup": {
      "types": "./dist/plugins/rollup.d.ts",
      "require": "./dist/plugins/rollup.js",
      "import": "./dist/plugins/rollup.mjs"
    },
    "./threads": {
      "types": "./dist/threads/index.d.ts",
      "require": "./dist/threads/index.js",
      "import": "./dist/threads/index.mjs"
    },
    "./vite-threads": {
      "types": "./dist/plugins/threads-vite.d.ts",
      "require": "./dist/plugins/threads-vite.js",
      "import": "./dist/plugins/threads-vite.mjs"
    },
    "./webpack-threads": {
      "types": "./dist/plugins/threads-webpack.d.ts",
      "require": "./dist/plugins/threads-webpack.js",
      "import": "./dist/plugins/threads-webpack.mjs"
    },
    "./rollup-threads": {
      "types": "./dist/plugins/threads-rollup.d.ts",
      "require": "./dist/plugins/threads-rollup.js",
      "import": "./dist/plugins/threads-rollup.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "service-worker",
    "sw",
    "threads",
    "worker",
    "pwa",
    "vite",
    "webpack",
    "rollup",
    "bundler",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.19.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/webpack": "^5.28.5",
    "rollup": "^4.52.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^7.1.10"
  },
  "peerDependencies": {
    "rollup": ">=3.0.0",
    "vite": ">=4.0.0",
    "webpack": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    },
    "rollup": {
      "optional": true
    }
  },
  "files": [
    "dist"
  ]
}
